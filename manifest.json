{
  "name": "Tab Closer",
  "version": "0.1",
  "description": "Close all tabs from a given site",
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "/images/icons8-close-tab-48.png",
      "96": "/images/icons8-close-tab-96.png"
    }
  },
  "icons": {
    "48": "/images/icons8-close-tab-48.png",
    "96": "/images/icons8-close-tab-96.png"
  },
  "manifest_version": 3
}
